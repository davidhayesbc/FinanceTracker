{
  "editor.formatOnSave": true,
  "[csharp]": {
    "editor.defaultFormatter": "ms-dotnettools.csharp"
  },
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[typescript]": {
    "editor.defaultFormatter": "vscode.typescript-language-features"
  },
  "[vue]": {
    "editor.defaultFormatter": "Vue.volar"
  },
  "files.eol": "\n",
  "github.copilot.chat.commitMessageGeneration.instructions": [
    {
      "text": "Be extremely detailed with the file changes and the reason for the change. Use lots of emojis."
    }
  ],
  "github.copilot.chat.codeGeneration.instructions": [
    {
      "file": "./docs/solution-structure.md"
    },
    {
      "file": "./docs/javascript-styles.md"
    },
    {
      "file": "./docs/csharp-styles.md"
    },
    {
      "file": "./docs/database-styles.md"
    },
    {
      "file": "./docs/azure-infrastructure-styles.md"
    },
    {
      "file": "./docs/api-design-styles.md"
    },
